<p id="notice"><%= notice %></p>

<h1>Pages</h1>
<h2><%= link_to 'Create New Page', new_page_path %></h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relative Path</th>
      <th>Parent Path</th>
      <th>Slug</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.relative_path %></td>
        <td><%= page.parent_path %></td>
        <td><%= page.slug %></td>
        <% if page.parent.blank? %>
          <td><%= link_to 'Show Page Structure', page %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
